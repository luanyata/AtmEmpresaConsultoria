<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="br.com.luanyata.atmempresaconsultoria.MainActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:background="@drawable/logo" />

            <ImageView
                android:id="@+id/idMenuEmpresa"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/imageView"
                android:layout_alignStart="@+id/imageView"
                android:layout_below="@+id/imageView"
                android:layout_marginTop="33dp"
                android:background="@drawable/menu_empresa" />

            <ImageView
                android:id="@+id/idMenuServicos"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignEnd="@+id/imageView"
                android:layout_alignRight="@+id/imageView"
                android:layout_alignTop="@+id/idMenuEmpresa"
                android:background="@drawable/menu_servico"
                android:clickable="true" />

            <ImageView
                android:id="@+id/idMenuClientes"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/idMenuEmpresa"
                android:layout_alignStart="@+id/idMenuEmpresa"
                android:layout_below="@+id/idMenuEmpresa"
                android:layout_marginTop="32dp"
                android:background="@drawable/menu_cliente"
                android:clickable="true" />

            <ImageView
                android:id="@+id/idMenuContato"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/idMenuServicos"
                android:layout_alignStart="@+id/idMenuServicos"
                android:layout_alignTop="@+id/idMenuClientes"
                android:background="@drawable/menu_contato"
                android:clickable="true" />
        </RelativeLayout>
    </ScrollView>
</RelativeLayout>
